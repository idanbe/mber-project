<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#404040"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.game_4_in_a_row.Game"
    android:id="@+id/game">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textColor="#66a3ff"
        android:id="@+id/textView_game"
        android:text="@string/textView_game"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <com.example.administrator.game_4_in_a_row.MyView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view"
        android:layout_below="@+id/textView_game"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/imageView" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_player_turn"
        android:textSize="30dp"
        android:layout_below="@id/view"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:background="@drawable/board2"
        android:layout_below="@+id/textView_game"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button_Reset"
        android:background="@drawable/buttonshape2"
        android:textColor="@drawable/buttontext"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView_game"
        android:layout_alignEnd="@+id/textView_game" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/button_backGame"
        android:background="@drawable/buttonshape2"
        android:textColor="@drawable/buttontext"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView_game"
        android:layout_alignStart="@+id/textView_game" />


</RelativeLayout>
